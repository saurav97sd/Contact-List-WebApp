<!DOCTYPE html>
<html>
    <head>
        <title>
            <%= locals.title %>
        </title>

        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">

        <link rel="stylesheet" href="/css/home.css">
    </head>

    <body>
        <h1 id="page-heading">
            <i class="fas fa-address-book"></i>
            Contact List
        </h1>


        <!-- Showing the contact list -->
        <div id="container">
            <ul>
                <% for (let i of contact_list){ %>

                    <li class="contact">
                        <div id="details"> 
                            <i class="fas fa-user-circle fa-3x"></i>
                            <p><%= i.name %></p>
                            <p><%= i.phone %></p>
                        </div> 
                        <div id="delete-button" class="delete-button">
                            <!-- <a href="/delete-contact/?phone=<%= i.phone %>">
                                <i class="fas fa-times"></i>
                            </a> -->
                            <!-- Now we are passing the unique object id from the db -->
                            <a href="/delete-contact/?id=<%= i._id %>">
                                <i class="fas fa-times"></i>
                            </a>
                        </div>
                        
                    </li>

                <% } %>
            </ul>
        </div>


        <!-- Adding a form -->
        <form action="/create-contact" method="post">

            <input type="text" name="name" placeholder="Enter Name" required>
            <input type="number" name="phone" placeholder="Enter Phone Number" required>

            <button type="submit"> Add Contact </button>

        </form>

        <!-- Adding the static file -->
        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>